<header>
  <div class="container">
    <%= link_to image_tag('max1000.png'), root_path, class: 'logo' %>
    <%= form_tag({controller: :products, action: 'search_suggestions'}, method: 'get', class: 'form-horizontal search-form', id: 'header-search') do %>
        <div class="form-group">
          <div class="input-box">
            <%= text_field_tag(:q, (params[:q].present? ? params[:q] : nil), class: '', placeholder: 'Поиск', autocomplete: 'off', value: '') %>
            <button class="submit-inside-input" aria-hidden="true" onclick="document.getElementById('header-search').submit();"><%= image_tag('search-btn.png') %></button>

            <ul id="results">

            </ul>
          </div>
        </div>
    <% end %>
    <div class="counter_inside">
      <div class="counter">
        <span>7</span>
        <span>2</span>
        <span>6</span>
        <span>2</span>
        <span>9</span>
      </div>
      <p>товаров до 1000 рублей</p>
    </div>
  </div>
</header>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Главная', root_path %></li>
        <li><%= link_to 'Каталог', products_path %></li>
        <li><%= link_to 'О нас', about_path, 'data-no-turbolink' => true %></li>
        <li class="favorites">
          <%= link_to cart_path do %>
            <i class="fa fa-shopping-cart"></i>
            <span class='fav'> Корзина</span>
          <% end %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

